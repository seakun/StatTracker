<% title "Batting Post Stats" %>

<table>
  <tr>
    <th>Player</th>
	<th>Bats</th>
	<th><%= params[:stat].titleize %></th>
  </tr>
  
  <% for batting_post_stat in @batting_post_stats %>
    <tr>
      <td><%= batting_post_stat[0].name %></td>
	  <td><%= batting_post_stat[0].bats %></td>
	  <td><%= batting_post_stat[1]%></td>
    </tr>
  <% end %>
  
</table>
