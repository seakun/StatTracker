<% title "Pitching Stats" %>

<table>
  <tr>
    <th>Player</th>
	<th>Throws</th>
	<th>Team</th>
	<th>Year</th>
	<th><%= params[:stat].titleize %></th>
  </tr>
  
  <% for pitching_stat in @pitching_stats %>
    <tr>
      <td><%= pitching_stat.player.name %></td>
	  <td><%= pitching_stat.player.throws %></td>
      <td><%= pitching_stat.team.name %></td>
	  <td><%= pitching_stat.team.year %></td>
	  <td><%= pitching_stat.send(params[:stat])%></td>
    </tr>
  <% end %>
  
</table>