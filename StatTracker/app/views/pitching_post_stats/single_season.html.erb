<% title "Pitching Post Stats" %>

<table>
  <tr>
    <th>Player</th>
    <th>Team</th>
	<th>Year</th>
    <th>Round</th>
    <th><%= params[:stat].titleize %></th>
  </tr>
  <% for pitching_post_stat in @pitching_post_stats %>
    <tr>
      <td><%= pitching_post_stat.player.last_name %></td>
      <td><%= pitching_post_stat.team.name%></td>
	  <td><%= pitching_post_stat.team.year %></td>
      <td><%= pitching_post_stat.round %></td>
      <td><%= pitching_post_stat.send(params[:stat])%></td>
    </tr>
  <% end %>
</table>
