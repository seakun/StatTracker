<% title "Pitching Post Stats" %>

<table>
  <tr>
    <th>Player</th>
	<th>Throws</th>
	<th><%= params[:stat].titleize %></th>
  </tr>
  
  <% for pitching_post_stat in @pitching_post_stats %>
    <tr>
      <td><%= pitching_post_stat[0].name %></td>
	  <td><%= pitching_post_stat[0].throws %></td>
	  <td><%= pitching_post_stat[1]%></td>
    </tr>
  <% end %>
  
</table>
