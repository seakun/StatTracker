<% title "Franchises" %>

<table>
  <tr>
    <th>Name</th>
    <th>Active</th>
  </tr>
  <% for franchise in @franchises %>
    <tr>
      <td><%= franchise.name %></td>
      <td><%= franchise.active %></td>
      <td><%= link_to "Show", franchise %></td>
      <td><%= link_to "Edit", edit_franchise_path(franchise) %></td>
      <td><%= link_to "Destroy", franchise, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Franchise", new_franchise_path(franchise) %></p>
