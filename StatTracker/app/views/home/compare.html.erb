<%title 'Compare Players'%>
	<%= form_tag years_players_path, :remote => true, :id => 'years' do %>
		<div id = "comp">			
			Batting<%= radio_button_tag 'comp', 'batting', true %>
			Pitching<%= radio_button_tag 'comp', 'pitching' %>
		</div>
		<br/>
		<table>
		<tr>
		<td>
		<div id = "players">
			<table>
				<%= text_field_tag 'players[]', '', :size => 32, :placeholder => 'Enter a player..', :autocomplete => home_autocomplete_player_name_path%>
				<div id = 'text2'><%= text_field_tag 'players[]', '', :size => 32, :autocomplete => home_autocomplete_player_name_path%></div>
				<div id = 'text3'><%= text_field_tag 'players[]', '', :size => 32, :autocomplete => home_autocomplete_player_name_path%></div>
				<div id = 'text4'><%= text_field_tag 'players[]', '', :size => 32, :autocomplete => home_autocomplete_player_name_path%></div>
				<div id = 'text5'><%= text_field_tag 'players[]', '', :size => 32, :autocomplete => home_autocomplete_player_name_path%></div>
			</table>
		</div>
			<br/>
			Season<%= radio_button_tag 'type', 'season', true %>
			<br/>
			Career<%= radio_button_tag 'type', 'career' %>
			<br/>
			Multi-Year<%= radio_button_tag 'type', 'multi' %>
			<br/>
			<br/>
			<%= submit_tag 'Compare' %>
		</td>
	<% end %>	

		<td class = 'years' >
			<div id = 'years_place'>
			</div>	
		</td>
	</tr>
</table>
		
