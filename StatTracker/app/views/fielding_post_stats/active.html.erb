<% title "Fielding Post Stats" %>

<table>
  <tr>
    <th>Player</th>
	<th>Position</th>
	<th><%= params[:stat].titleize %></th>
  </tr>
  
  <% for fielding_post_stat in @fielding_post_stats %>
    <tr>
      <td><%= fielding_post_stat[0].name %></td>
	  <td><%= fielding_post_stat.position %></td>
	  <td><%= fielding_post_stat[1]%></td>
    </tr>
  <% end %>
  
</table>