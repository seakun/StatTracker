<% title "Career Comparison" %>

	<div id = 'table_place'>
		<%= render :partial => 'table'  %> 
	</div>

	<br/>
	<br/>
	
	<%= form_tag change_career_table_batting_path(:players => @players), :remote => true, :id => "change_table" do %>
		<span title="Games"><%= check_box_tag 'stat[]', 'games', false %>G</span>
		<span title="Plate Appearances"><%= check_box_tag 'stat[]', 'plate_appearances', false %>PA</span>
		<span title="At Bats"><%= check_box_tag 'stat[]', 'at_bats', false %>AB</span>
		<span title="Runs"><%= check_box_tag 'stat[]', 'runs', true %>R</span>
		<span title="Hits"><%= check_box_tag 'stat[]', 'hits', true %>H</span>
		<span title="Doubles"><%= check_box_tag 'stat[]', 'doubles', false %>2B</span>
		<span title="Triples"><%= check_box_tag 'stat[]', 'triples', false %>3B</span>
		<span title="Home Runs"><%= check_box_tag 'stat[]', 'home_runs', true %>HR</span>
		<span title="Total Bases"><%= check_box_tag 'stat[]', 'total_bases', false %>TB</span>
		<span title="Extra Base Hits"><%= check_box_tag 'stat[]', 'extra_base_hits', false %>XBH</span>
		<span title="RBI"><%= check_box_tag 'stat[]', 'rbi', true %>RBI</span>
		<span title="Stolen Bases"><%= check_box_tag 'stat[]', 'stolen_bases', true %>SB</span>
		<span title="Caught Stealing"><%= check_box_tag 'stat[]', 'caught_stealing', false %>CS</span>
		<span title="Walks"><%= check_box_tag 'stat[]', 'walks', false %>BB</span>
		<span title="Strikeouts"><%= check_box_tag 'stat[]', 'strikeouts', false %>K</span>
		<span title="Intentional Walks"><%= check_box_tag 'stat[]', 'intentional_walks', false %>IBB</span>
		<span title="Hit by Pitch"><%= check_box_tag 'stat[]', 'hit_by_pitch', false %>HBP</span>
		<span title="Sacrifice Hits"><%= check_box_tag 'stat[]', 'sacrifice_hits', false %>SAC</span>
		<span title="Sacrifice Flies"><%= check_box_tag 'stat[]', 'sacrifice_flies', false %>SF</span>
		<span title="Grounded into Double Plays"><%= check_box_tag 'stat[]', 'grounded_into_double_plays', false %>GIDP</span>
		<%= submit_tag 'Update' %>
	<% end %>
	
	<br/>
	<br/>
	
	<%= form_tag change_career_chart_batting_path(:players => @players), :id => "change_chart", :remote => true do %>
		<%= select_tag "chart_type", 
		raw("<option>Home Runs</option>
		<option>Games</option>
		<option>Plate Appearances</option>
		<option>At Bats</option>
		<option>Runs</option>
		<option>Hits</option>
		<option>Doubles</option>
		<option>Triples</option>
		<option>Total Bases</option>
		<option>Extra Base Hits</option>
		<option>RBI</option>
		<option>Stolen Bases</option>
		<option>Caught Stealing</option>
		<option>Walks</option>
		<option>Strikeouts</option>
		<option>Intentional Walks</option>
		<option>Hit by Pitch</option>
		<option>Sacrifice Hits</option>
		<option>Sacrifice Flies</option>
		<option>Grounded into Double Plays</option>")
		%>
		<%#= submit_tag 'Update' %>
	<% end %>

	<br/>
	<br/>
	
	<div id = 'chart_place'>
		<%= render :partial => 'chart'  %> 
	</div>
	
	<script type="text/javascript">
          $('#chart_type').change(function(){
            $(this).parents('form:first').submit();
          });
        </script>
