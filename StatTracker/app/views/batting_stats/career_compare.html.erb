<% title "Batting Compare" %>


	<div id = 'table_place'>
		<%= render :partial => 'table'  %> 
	</div>
	

	<br/>
	<br/>
	
	<%= select("chart_type", "chart", raw("<option>Home Runs</option><option>RBI</option>"), options={:prompt=> 'Choose a Statistic...'}) %>
	
	
	<br/>
	<br/>
	<div id = 'chart_place'>
		<%= render :partial => 'chart'  %> 
	</div>
	
	
	<br/>
	<br/>
	
	
	<%= form_tag change_table_path(:players => @players), :remote => true, :id => 'stats'  do %>
		<%= check_box_tag 'stat[]', 'games', false %>G
		<%= check_box_tag 'stat[]', 'plate_appearances', false %>PA
		<%= check_box_tag 'stat[]', 'at_bats', false %>AB
		<%= check_box_tag 'stat[]', 'runs', true %>R
		<%= check_box_tag 'stat[]', 'hits', true %>H
		<%= check_box_tag 'stat[]', 'doubles', false %>2B
		<%= check_box_tag 'stat[]', 'triples', false %>3B
		<%= check_box_tag 'stat[]', 'home_runs', true %>HR
		<%= check_box_tag 'stat[]', 'total_bases', false %>TB
		<%= check_box_tag 'stat[]', 'extra_base_hits', false %>XBH
		<%= check_box_tag 'stat[]', 'rbi', true %>RBI
		<%= check_box_tag 'stat[]', 'stolen_bases', true %>SB
		<%= check_box_tag 'stat[]', 'caught_stealing', false %>CS
		<%= check_box_tag 'stat[]', 'walks', false %>BB
		<%= check_box_tag 'stat[]', 'strikeouts', false %>K
		<%= check_box_tag 'stat[]', 'intentional_walks', false %>IBB
		<%= check_box_tag 'stat[]', 'hit_by_pitch', false %>HBP
		<%= check_box_tag 'stat[]', 'sacrifice_hits', false %>SAC
		<%= check_box_tag 'stat[]', 'sacrifice_flies', false %>SF
		<%= check_box_tag 'stat[]', 'grounded_into_double_plays', false %>GIDP
		<%= submit_tag 'Update' %>
	<% end %>