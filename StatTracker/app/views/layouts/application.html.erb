<!DOCTYPE html>
<html>
  <head>
    <title>StatTracker</title>
    <%= stylesheet_link_tag "application" %>
	<link rel="shortcut icon" href="/public/favicon.ico" type="image/x-icon" />
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
	<script src='http://www.google.com/jsapi'></script> 
	<script src='https://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js'></script> 
	<%= javascript_include_tag :defaults %>
	<script>
	$(document).ready(function(){
		$('li.dropdownmenu').hover(
			function() { $('ul', this).css('display', 'block'); },
			function() { $('ul', this).css('display', 'none'); });
	});
	</script>
  </head>
  
  <body>

  <div id="sign">
<% if user_signed_in? %>  
	Signed in as <%= current_user.email %>. Not you?  
	<%= link_to "Sign out", destroy_user_session_path %>  
	<%= link_to "Your Profile", :controller => "users", :action => "show" %>
<% else %>  
	<%= link_to "Sign up", new_user_registration_path %> or  
	<%= link_to "Sign in", new_user_session_path %>  
<% end %>
</div>

    <div id="hd"></div>

  <div id="nav">
      	<ul >
          	<!-- OPTIONS FOR EVERYONE -->
		
			<li><%= link_to 'Home', '/home/index' %></li>
			<li class= "dropdownmenu"><%= link_to 'Players'%>
			<ul id="cssdropdown">
				<%= form_tag(search_path) do %>
                <%= text_field_tag('query') %>
                <%= submit_tag('Search') %>
            <% end %></ul></li>
			<li><%= link_to 'Teams', franchises_path %></li>  
			<li class="dropdownmenu"><%= link_to 'Leaders'%>
				<ul id="cssdropdown" style="width:320px">
					<li><%= link_to 'Batting Leaderboards', '/home/batting_leaderboards' %></li>
					<li><a href="">Pitching Leaderboards</a></li>
					<li><a href="">Fielding Leaderboards</a></li>
				</ul>
			</li> 
			<li><%= link_to 'Season Finders', '/seasonfinder/batting' %> </li>
</ul>
</div> 

    <div id="container">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>
	
  </body>
</html>
